# Environment variables
.env
.venv
# Python caches
__pycache__/
*.pyc

# LaTeX auxiliary files (globally ignore)
*.aux
*.log
*.fdb_latexmk
*.fls
*.gz

# Ignore all contents of 'output/' by default
output/*

# Explicitly re-include specific top-level directories within output/
!output/problems/
!output/results/
!output/critiques/
!output/papers/

# For 'problems' directory, track only JSON files
output/problems/*
!output/problems/*.json

# For 'results' directory, track only JSON files recursively
output/results/**/*
!output/results/**/
!output/results/**/*.json

# For 'critiques' and 'papers' directories, ignore all their contents recursively
output/critiques/**
output/papers/**

# Ignore other generated HTML output
output.html

# Ignore all 'tex_outputs' directories, which contain temporary compilation files
**/tex_outputs/
